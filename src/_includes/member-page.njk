---
layout: 'base.njk'
---

<article class="main-article">
  <div class="container flow">
    <h1 class="article-title">{{ name }}</h1>
    
    <figure class="main-article__figure">
      <img src="{{ image }}" alt="{{ imageAlt }}">
      <figcaption>{{ institution }} | {{ position }}</figcaption>
    </figure>
    
    <div class="flow">
      <h2>Bio</h2>
      {{ content | safe }}
    </div>

  </div>
</article>