---
title: My homepage
layout: 'base.njk'
---
      
<section class="hero">
  <div class="container flow">
      <div class="hero__content flow">
        <h1 class="section-title">{{ landingSection.hero.title }}</h1>
        
        {# Correctly process Markdown from the CMS #}
        <p>{{ landingSection.hero.introduction | markdown | safe }}</p>
                
        <div class="flex-group">
          <a href="{{ landingSection.hero.primaryButtonLink }}" class="btn btn--primary">{{ landingSection.hero.primaryButtonText }}</a>
          <a href="{{ landingSection.hero.secondaryButtonLink }}" class="btn btn--neutral">{{ landingSection.hero.secondaryButtonText }}</a>
        </div>
      </div>
      <div>
        <img src="{{ landingSection.hero.heroImage | url }}" class="hero__image">
      </div>
  </div>
</section>

<section id="featured-articles" class="featured-articles">
  <div class="container flow">
    <h2 class="section-title text-center">Featured Research</h2>
    <p class="text-center">Here is a sample of our key articles and field reports that highlight our current projects and research goals.</p>
    <ul role="list" class="articles__list flow">

      {%- for post in collections.featured | reverse -%}
        {% include 'article-snippet.njk' %}
      {%- endfor %} 
    
    </ul>
  </div>
</section>