---
title: My homepage
layout: 'base.njk'
---
 <section class="landingSection hero-overlay" style="background-image: url('{{ homePage.hero.heroImage | url }}');">
    {# The image URL is now injected via the style attribute above #}
    <div class="container flow">
        <div class="landingSection__content flow">
            
            {# Primary Title #}
            <h1 class="section-title landingSection__title">
                {{ homePage.hero.title }}
            </h1>
            
            {# Secondary Text / Introduction #}
            <p class="landingSection__intro">
                {{ homePage.hero.introduction | markdown | safe }}
            </p> 
                        
        </div>
    </div>
    <a href="#featured-articles" class="landingSection__more">See more research ⬇</a>
</section>

<hr style=" border: 0; height: 2px; background-color: black; width: 100%; margin: 0 auto; ">

<section id="featured-articles" class="featured-articles" style="margin-top: 4rem;">
  <div class="container flow">
    
    <h2 class="section-title text-center">{{ homePage.featuredSection.title }}</h2>
    <p class="text-center">{{ homePage.featuredSection.description | markdown | safe }}</p>
    
    <ul role="list" class="articles__list flow publications-view">

      {%- for post in collections.post | reverse -%}
        {% if loop.index <= 4 %}
          {% include 'article-snippet.njk' %}
        {% endif %}
      {%- endfor %} 
    
    </ul>

    <p class="text-center team-link-all">
        <a href="/recentArticle/" class="btn btn--neutral">View All Articles →</a>
    </p>

  </div>
</section>

<hr style="border: 0; height: 2px; background-color: black; margin: 3rem auto; width: 100%;">


<section id="team" class="team-section">
    <div class="container flow">
        <h2 class="section-title text-center">Our Research Team</h2>
        
        <ul role="list" class="team-list">
            {%- for member in collections.team -%}
                {% if loop.index <= 4 %}
                    {% include 'team-snippet.njk' %}
                {% endif %}
            {%- endfor %}
        </ul>
        
        <p class="text-center team-link-all">
            <a href="/team/" class="btn btn--neutral">View All Team Members →</a>
        </p>
    </div>
</section>

<hr style="border: 0; height: 2px; background-color: black; margin: 0 auto; width: 100%;margin-top: 4rem;">
